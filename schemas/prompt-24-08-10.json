{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/unicornmakers/public/main/schemas/prompt-24-08-10.json",
  "title": "unicloud Prompt 24-08-10",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "The URI of the schema definition."
    },
    "context": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the context element."
          },
          "content": {
            "type": "string",
            "description": "Content that uses a parameter from params."
          }
        },
        "required": ["description", "content"],
        "description": "A context element containing a description and associated content.",
        "additionalProperties": false
      },
      "description": "An array of context elements."
    },
    "prompt": {
      "type": "string",
      "description": "The prompt for generating the output."
    },
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "$id": "http://json-schema.org/draft-07/schema#",
      "title": "Core prompt schema meta-schema",
      "definitions": {
          "schemaArray": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/properties/schema" }
          },
          "nonNegativeInteger": {
              "type": "integer",
              "minimum": 0
          },
          "nonNegativeIntegerDefault0": {
              "allOf": [
                  { "$ref": "#/properties/schema/definitions/nonNegativeInteger" },
                  { "default": 0 }
              ]
          },
          "simpleTypes": {
              "enum": [
                  "array",
                  "boolean",
                  "integer",
                  "null",
                  "number",
                  "object",
                  "string"
              ]
          },
          "stringArray": {
              "type": "array",
              "items": { "type": "string" },
              "uniqueItems": true,
              "default": []
          }
      },
      "type": ["object", "boolean"],
      "properties": {
          "$id": {
              "type": "string",
              "format": "uri-reference"
          },
          "$schema": {
              "type": "string",
              "format": "uri"
          },
          "$ref": {
              "type": "string",
              "format": "uri-reference"
          },
          "$comment": {
              "type": "string"
          },
          "title": {
              "type": "string"
          },
          "description": {
              "type": "string"
          },
          "default": true,
          "readOnly": {
              "type": "boolean",
              "default": false
          },
          "writeOnly": {
              "type": "boolean",
              "default": false
          },
          "examples": {
              "type": "array",
              "items": true
          },
          "multipleOf": {
              "type": "number",
              "exclusiveMinimum": 0
          },
          "maximum": {
              "type": "number"
          },
          "exclusiveMaximum": {
              "type": "number"
          },
          "minimum": {
              "type": "number"
          },
          "exclusiveMinimum": {
              "type": "number"
          },
          "maxLength": { "$ref": "#/properties/schema/definitions/nonNegativeInteger" },
          "minLength": { "$ref": "#/properties/schema/definitions/nonNegativeIntegerDefault0" },
          "pattern": {
              "type": "string",
              "format": "regex"
          },
          "additionalItems": { "$ref": "#/properties/schema" },
          "items": {
              "anyOf": [
                  { "$ref": "#/properties/schema" },
                  { "$ref": "#/properties/schema/definitions/schemaArray" }
              ],
              "default": true
          },
          "maxItems": { "$ref": "#/properties/schema/definitions/nonNegativeInteger" },
          "minItems": { "$ref": "#/properties/schema/definitions/nonNegativeIntegerDefault0" },
          "uniqueItems": {
              "type": "boolean",
              "default": false
          },
          "contains": { "$ref": "#/properties/schema" },
          "maxProperties": { "$ref": "#/properties/schema/definitions/nonNegativeInteger" },
          "minProperties": { "$ref": "#/properties/schema/definitions/nonNegativeIntegerDefault0" },
          "required": { "$ref": "#/properties/schema/definitions/stringArray" },
          "additionalProperties": { "$ref": "#/properties/schema" },
          "definitions": {
              "type": "object",
              "additionalProperties": { "$ref": "#/properties/schema" },
              "default": {}
          },
          "properties": {
              "type": "object",
              "additionalProperties": { "$ref": "#/properties/schema" },
              "default": {}
          },
          "patternProperties": {
              "type": "object",
              "additionalProperties": { "$ref": "#/properties/schema" },
              "propertyNames": { "format": "regex" },
              "default": {}
          },
          "dependencies": {
              "type": "object",
              "additionalProperties": {
                  "anyOf": [
                      { "$ref": "#/properties/schema" },
                      { "$ref": "#/properties/schema/definitions/stringArray" }
                  ]
              }
          },
          "propertyNames": { "$ref": "#/properties/schema" },
          "const": true,
          "enum": {
              "type": "array",
              "items": true,
              "minItems": 1,
              "uniqueItems": true
          },
          "type": {
              "anyOf": [
                  { "$ref": "#/properties/schema/definitions/simpleTypes" },
                  {
                      "type": "array",
                      "items": { "$ref": "#/properties/schema/definitions/simpleTypes" },
                      "minItems": 1,
                      "uniqueItems": true
                  }
              ]
          },
          "format": { "type": "string" },
          "contentMediaType": { "type": "string" },
          "contentEncoding": { "type": "string" },
          "if": { "$ref": "#/properties/schema" },
          "then": { "$ref": "#/properties/schema" },
          "else": { "$ref": "#/properties/schema" },
          "allOf": { "$ref": "#/properties/schema/definitions/schemaArray" },
          "anyOf": { "$ref": "#/properties/schema/definitions/schemaArray" },
          "oneOf": { "$ref": "#/properties/schema/definitions/schemaArray" },
          "not": { "$ref": "#/properties/schema" }
      },
      "default": true
  }
  },
  "description": "A schema for unicloud prompts.",
  "additionalProperties": false
}
