{
  "$id": "https://raw.githubusercontent.com/unicornmakers/public/main/schemas/system_map-24-08-10.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "format": "uri",
      "type": "string"
    },
    "costs": {
      "additionalProperties": false,
      "anyOf": [
        {
          "required": [
            "forms"
          ]
        },
        {
          "required": [
            "messages"
          ]
        }
      ],
      "description": "Costs for different job types (in credits; decimals are ignored)",
      "properties": {
        "forms": {
          "description": "Cost for form generation",
          "minimum": 0,
          "type": "number"
        },
        "messages": {
          "description": "Cost for message generation",
          "minimum": 0,
          "type": "number"
        }
      },
      "type": "object"
    },
    "forms": {
      "description": "Forms definitions",
      "items": {
        "type": "string"
      },
      "patternProperties": {
        ".*": {
          "additionalProperties": false,
          "description": "Form definition",
          "properties": {
            "cost": {
              "description": "Cost for generating this form. Replaces the base cost.",
              "minimum": 0,
              "type": "number"
            },
            "generative": {
              "default": true,
              "description": "Whether AI is allowed to make changes to this form",
              "type": "boolean"
            },
            "prompts": {
              "description": "If generative, prompts allowed for this form. If not defined, the AI will look for a prompt with the same name as the form.",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "type": [
                "array"
              ]
            }
          },
          "type": "object"
        }
      },
      "type": [
        "array",
        "object"
      ]
    },
    "messages": {
      "description": "Message definitions",
      "items": {
        "type": "string"
      },
      "patternProperties": {
        ".*": {
          "additionalProperties": false,
          "description": "Message definition",
          "properties": {
            "cost": {
              "description": "Cost for generating this message. Replaces the base cost.",
              "minimum": 0,
              "type": "number"
            },
            "prompts": {
              "items": {
                "description": "Prompt for this message. If not defined, the AI will look for a prompt with the same name as the message.",
                "type": "string"
              },
              "minItems": 1,
              "type": [
                "array"
              ]
            }
          },
          "type": "object"
        }
      },
      "type": [
        "array",
        "object"
      ]
    },
    "objects": {
      "items": {
        "type": "string"
      },
      "patternProperties": {
        ".*": {
          "additionalProperties": false,
          "properties": {
            "forms": {
              "$ref": "#/properties/forms"
            },
            "messages": {
              "$ref": "#/properties/messages"
            },
            "objects": {
              "$ref": "#/properties/objects"
            },
            "relations": {
              "additionalProperties": false,
              "description": "Relations between objects",
              "patternProperties": {
                ".*": {
                  "additionalProperties": false,
                  "properties": {
                    "forms": {
                      "$ref": "#/properties/forms"
                    },
                    "messages": {
                      "$ref": "#/properties/messages"
                    },
                    "targets": {
                      "description": "Objects that can be targeted by this relation",
                      "items": {
                        "type": "string"
                      },
                      "type": [
                        "array"
                      ]
                    }
                  },
                  "required": [
                    "targets"
                  ],
                  "type": "object"
                }
              },
              "type": "object"
            }
          },
          "type": "object"
        }
      },
      "type": [
        "array",
        "object"
      ]
    }
  },
  "title": "unicloud Structure 24-08-10",
  "type": "object"
}